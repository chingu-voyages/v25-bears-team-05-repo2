{
  "name": "mongoose-express-ts",
  "version": "1.0.0",
  "description": "Mongoose Node.js Express TypeScript application boilerplate with best practices for API development.",
  "author": "Paul Cham",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "watch-tsc": "tsc -w",
    "deploy": "nodemon --exec 'ts-node src/server.ts'",
    "watch-deploy": "nodemon dist/src/server.js",
    "server": "concurrently \"npm run watch-tsc\" \"npm run watch-deploy\"",
    "start": "npm run deploy",
    "heroku-postbuild": "npm run tsc",
    "test": "npx jest"
  },
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "babel-jest": "^26.6.3",
    "bcryptjs": "^2.4.3",
    "config": "^3.1.0",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "express-session": "^1.17.1",
    "express-validator": "^5.3.1",
    "gravatar": "^1.8.0",
    "http-status-codes": "^1.3.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.7",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "request": "^2.88.0",
    "tslint": "^6.1.3",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "0.0.34",
    "@types/express": "^4.16.1",
    "@types/gravatar": "^1.8.0",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.5.0",
    "@types/passport": "^1.0.4",
    "concurrently": "^4.1.0",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^6.9.2",
    "nodemon": "^1.19.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0"
  }
}
